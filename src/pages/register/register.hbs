<form action="" class="form">
    <div class="fields">
        <h2 class="register__title">Регистрация</h2>

        <div class="inputs">
            {{#each inputs}}
                {{> Input 
                    inputId=inputId
                    classInput=classInput 
                    typeInput=typeInput 
                    placeholderInput=placeholderInput
                }}
            {{/each}}
        </div>
    </div>

    <div class="form__buttons">
        {{#each buttons}}
            {{>Button idButton=idButton typeButton=typeButton classButton=classButton textButton=textButton}}
        {{/each}}
    </div>
</form>