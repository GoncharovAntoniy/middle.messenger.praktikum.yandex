{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "targets": {
    "default": {
      "includeNodeModules": true
    }
  },
  "scripts": {
    "dev": "vite",
    "start": "vite build && node server.cjs",
    "prebuild": "tsc --noEmit",
    "build": "npm run prebuild && vite build",
    "lint": "eslint \"src/**/*.{js, ts}\"",
    "lint:fix": "eslint \"src/**/*.{js, ts}\" --fix",
    "lint:styles": "stylelint 'src/**/*.{css,scss,pcss}'",
    "lint:styles:fix": "stylelint 'src/**/*.{css,scss,pcss}' --fix",
    "lint:all": "npm run lint && npm run lint:styles && tsc --noEmit",
    "lint:all:fix": "npm run lint:fix && npm run lint:styles:fix && tsc --noEmit",
    "prettier:clean": "prettier --no-cache --write .",
    "preview": "vite preview",
    "test": "cross-env NODE_OPTIONS=--experimental-specifier-resolution=node mocha -r ts-node/register/transpile-only --require jsdom-global/register src/**/*.spec.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.6",
    "esbuild": "^0.25.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.0.10",
    "shelljs": "^0.9.2",
    "sinon": "^19.0.2",
    "stylelint": "^16.12.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-scss": "^6.10.0",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.5.4",
    "vite": "^4.5.5"
  },
  "dependencies": {
    "express": "^4.21.1",
    "handlebars": "^4.7.8",
    "prettier": "^2.8.8",
    "sass": "^1.81.0"
  }
}
